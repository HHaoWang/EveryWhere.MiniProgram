/**
用户信息
**/

.result {
    width: 200px;
    margin: 0px auto;
    text-align: center;
    font-weight: bolder;
    font-size: 20px;
}

.result .headimg {
    width: 100px;
    height: 100px;
    border-radius: 100px;
    margin-bottom: 10px;
}

.result .headimg image {
    width: 100px;
    height: 100px;
    border-radius: 100px;
    margin-left: 55px;
}

.user-box {
    height: 300rpx;
    width: 100%;
    position: relative;
    margin-bottom: 16px;
}

.user-box .user-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.header-box {
    position: relative;
    z-index: 99;
    padding: 32rpx 25rpx;
    height: 100px;
    display: flex;
    justify-content: center;
    padding-bottom: 35px;
    text-align: center;
}

.header-box .avatar {
    height: 170rpx;
    width: 170rpx;
    border-radius: 50%;
    margin-bottom: 10px;
}

.header-box .user-info {
    flex: 1;
    display: flex;
    justify-content: space-between;
    flex-direction: column;
    padding-left: 48rpx;
}

.header-box .user-info .name {
    font-size: 48rpx;
    font-weight: 500;
}

.header-box .user-info .des {
    font-size: 28rpx;
    color: #888;
}

.user-info-action {
    position: relative;
    z-index: 99;
    display: flex;
    justify-content: space-around;
    margin-top: 62rpx;
}

.user-info-action .cell {
    text-align: center;
}

.user-info-action .cell .title {
    font-size: 28rpx;
    font-weight: 500;
    color: #888;
}

.user-info-action .cell .num {
    font-weight: 600;
    color: black;
    font-size: 48rpx;
    margin-top: 14rpx;
}

.cell-box {
    padding-top: 30rpx;
    margin: 0px 30rpx 0px 30rpx;
}

.cell-box .single-cell {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    padding: 30rpx 20rpx;
    border: 2px solid #f6f8fc;
    margin-bottom: 3rpx;
    border-radius: 15px;
}

.cell-box .single-cell .icon {
    height: 50rpx;
    width: 50rpx;
    border-radius: 16rpx;
}

.cell-box .single-cell .text-box {
    display: flex;
    justify-content: space-between;
    flex: 1;
    font-weight: 500;
    font-size: 28rpx;
    align-items: center;
    padding-left: 34rpx;
}

.cell-box .single-cell .text-box .arrow {
    width: 30rpx;
    height: 30rpx;
}

